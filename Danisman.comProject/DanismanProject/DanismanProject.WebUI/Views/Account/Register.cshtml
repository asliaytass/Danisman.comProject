@model RegisterModel


<div class="container-fluid" >
    <div class="mb-5 container-fluid mt-5" style="min-height:600px;">
        <div class="login-box mt-5">
            <h2>Üye Ol</h2>
            <form  asp-controller="Account" asp-action="Register" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="user-box">
                    <input asp-for="FirstName" type="text">
                    <label>Ad</label>
                </div>
                <div class="user-box">
                    <input asp-for="LastName" type="text">
                    <label>Soyad</label>
                </div>
                <div class="user-box">
                    <input asp-for="UserName" type="text">
                    <label>Kulanıcı Adı</label>
                </div>
                <div class="user-box">
                    <input asp-for="Email" type="email">
                    <label>E-mail</label>
                </div>
                <div class="user-box">
                    <input asp-for="Password" type="password">
                    <label>Şifre</label>
                </div>
                <div class="user-box">
                    <input asp-for="RePassword" type="password">
                    <label>Tekrar Şifre</label>
                </div>
                <div class="form-group">
                    <button class="border-0 bg-dark">
                        <span></span>
                        <span></span>
                        <span></span>
                        <span></span>
                        Üye ol
                    </button>
                </div>
                
            </form>
        </div>
    </div>
</div>