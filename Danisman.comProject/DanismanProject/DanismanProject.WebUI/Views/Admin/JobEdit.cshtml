
@model Job
@{
    ViewData["Title"] = "JobEdit";
    Layout = "~/Views/Shared/_HesabımLayout.cshtml";
}


<div class="container">
    <h5 class="display-4">Edit Job</h5>
    <hr />
    <form asp-controller="Admin" asp-action="JobEdit" method="post" class="w-75 ">
        <div class="row">
            <div class="d-flex flex-column w-75">
                <img src="~/img/@Model.JobImg" width="325" />

                <div class="form-group mt-2 w-50">
                    <label class="col-form-label">Resim Url:</label>
                    <input type="text" asp-for="JobImg" class="form-control" />
                </div>
                <div class="form-group mt-2 w-50">
                    <label class="col-form-label">Kategori:</label>
                    <input type="text" asp-for="JobName" class="form-control" />
                </div>
                <div class="form-group mt-2">
                    <label class="col-form-label">Açıklama:</label>
                    <textarea type="text" asp-for="JobDescription" class="form-control" style="height:300px"></textarea>
                </div>
            </div>
        </div>
        <button type="submit" class="btn  btn-outline-warning mb-5" style="width:150px">Kaydet</button>
    </form>
</div>

