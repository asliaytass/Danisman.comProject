
@{
    ViewData["Title"] = "JobList";
    Layout = "~/Views/Shared/_HesabımLayout.cshtml";
}

@model List<Job>

<div class="container">


    <div class="row">
        <div class="col-md-12 mt-3">
            <h6 class="display-4">Admin Jobs Managament</h6>
            <hr />

            <table class="table table-bordered mt-2">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Actions</th>

                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() > 0)
                    {
                        @foreach (var job in Model)
                        {
                            <tr>
                                <td>@job.JobId</td>
                                <td>@job.JobName</td>

                                <td>

                                    <a href="/admin/jobedit/@job.JobId"  class="btn btn-sm btn-primary mr-1">Edit</a>

                                    <form action="/Admin/jobdelete" method="post" class="d-inline">
                                        <input type="hidden" name="jobId" value="@job.JobId" />
                                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3">
                                <div class="alert alert-warning">
                                    <h3>No Roles!</h3>
                                </div>
                            </td>
                        </tr>

                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

